@model List<Skill>
@{
	ViewData["Title"] = "List of users";
}

<div>
	<h1>@ViewData["Title"]</h1>
	<a asp-controller="Skill" asp-action="Create"
		class="btn btn-success">Create new skill
	</a>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Icon</th>
				<th>Title</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>
							@if (item.Icon != null)
							{
								<img style="max-width: 50px;" class="img-thumbnail" src="@item.Icon.Src" />
							}
					</td>
					<td style="color: @item.Color">@item.Title</td>
					<td>
						<a asp-area="" asp-controller="Skill" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-primary">
							Edit
						</a>
						<a asp-area="" asp-controller="Skill" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger">
							Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
