@model List<UserInfo>
@{
	ViewData["Title"] = "List of users";
}

<div>
	<h1>@ViewData["Title"]</h1>
	<a 
		asp-controller="UserInfo" asp-action="Create"
		class="btn btn-success">Create
	</a>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Profession</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Email</td>
					<td>@item.Profession</td>
					<td>
						<a asp-area="" asp-controller="UserInfo" asp-action="View" asp-route-id="@item.Id" class=" btn btn-primary">
							View
						</a>
						<a asp-area="" asp-controller="UserInfo" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-primary">
							Edit
						</a>
						<a asp-area="" asp-controller="UserInfo" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger">
							Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
