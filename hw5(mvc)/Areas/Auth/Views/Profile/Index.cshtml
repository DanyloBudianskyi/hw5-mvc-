@model User
@{
    ViewData["Title"] = "Profile";
}
<div>
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body">
                    @if (Model.ImageFile != null)
                    {
                        <div class="avatar" style="background-image: url(@Model.ImageFile.Src)"></div>
                    }
                    <div><h5>@Model.FullName</h5></div>
                    <div>
                        <div class="small text-muted">Email</div>
                        @Model.Email
                    </div>
                    <div>
                        <div class="small text-muted">Phone</div>
                        @Model.PhoneNumber
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-area="Auth"
                       asp-controller="Profile"
                       asp-action="Edit"
                       class="btn btn-success">Edit</a>
                    <a asp-area="Auth"
                       asp-controller="Profile"
                       asp-action="Delete"
                       class="btn btn-danger">Delete profile</a>
                    <a asp-area=""
                       asp-controller="Home"
                       asp-action="Index"
                       class="btn btn-primary">Return</a>
                </div>
            </div>
        </div>

